{
	"build": {
		"beforeDevCommand": "npm run front:dev",
		"beforeBuildCommand": "npm run front:build",
		"devPath": "http://localhost:1420",
		"distDir": "../dist",
		"withGlobalTauri": false
	},
	"package": {
		"productName": "YARG-Launcher",
		"version": "0.0.0"
	},
	"tauri": {
		"allowlist": {
			"all": false,
			"shell": {
				"all": false,
				"open": true
			},
			"window": {
				"all": false,
				"close": true,
				"hide": true,
				"show": true,
				"maximize": true,
				"minimize": true,
				"unmaximize": true,
				"unminimize": true,
				"startDragging": true
			}
		},
		"bundle": {
			"active": true,
			"targets": "all",
			"identifier": "in.yarg.launcher",
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			]
		},
		"security": {
			"csp": null
		},
		"windows": [
			{
				"fullscreen": false,
				"resizable": true,
				"title": "Yet Another Launcher",
				"width": 1038,
				"height": 505,
				"minWidth": 0,
				"minHeight": 0,
				"decorations": false
			}
		]
	}
}